<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dmr.ganu_alimentos">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainScreenActivity">
        </activity>
        <activity android:name=".SigninActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SplashscreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProductDetails" android:parentActivityName=".MainScreenActivity"/>
        <activity android:name=".cart.CartActivity" android:parentActivityName=".MainScreenActivity"/>
        <activity android:name=".ModifyInfo" android:parentActivityName=".MainScreenActivity"/>
    </application>

</manifest>