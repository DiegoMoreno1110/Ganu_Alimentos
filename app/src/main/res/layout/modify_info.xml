<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="50dp"
        android:background="#EDECEC">


        <include
            android:id="@+id/include"
            layout="@layout/app_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="61dp"
            tools:layout_editor_absoluteY="91dp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:text="Información personal"
            android:textColor="#FF5722"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/address"
            android:layout_width="358dp"
            android:layout_height="43dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/gradientMiddle"
            android:background="@drawable/rounded_corner"
            android:hint="Dirección de entrega"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView22" />

        <EditText
            android:id="@+id/email"
            android:layout_width="358dp"
            android:layout_height="46dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/gradientMiddle"
            android:ems="10"
            android:hint="Correo electrónico"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/address" />

        <Button
            android:id="@+id/modifyInfoProfileButton"
            style="@android:style/Widget.Button"
            android:layout_width="287dp"
            android:layout_height="33dp"
            android:layout_marginTop="12dp"

            android:background="@drawable/rounded_button_v2"
            android:text="Modificar información personal"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.572"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password" />

        <Button
            android:id="@+id/modifyInfoCard"
            style="@android:style/Widget.Button"
            android:layout_width="287dp"
            android:layout_height="33dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button_v2"
            android:text="Modificar información de pago"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.572"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cvc" />

        <EditText
            android:id="@+id/password"
            android:layout_width="358dp"
            android:layout_height="46dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/gradientMiddle"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Contraseña"
            android:background="@drawable/rounded_corner"

            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Información de pago"
            android:textColor="#FF5722"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/modifyInfoProfileButton" />

        <EditText
            android:id="@+id/nameCard"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/gradientMiddle"
            android:ems="10"
            android:background="@drawable/rounded_corner"

            android:hint="Nombre completo"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView25" />

        <EditText
            android:id="@+id/numberCard"
            android:layout_width="358dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/gradientMiddle"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:background="@drawable/rounded_corner"

            android:hint="Número de tarjeta"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameCard" />

        <EditText
            android:id="@+id/cvc"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/gradientMiddle"
            android:hint="CVC"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.103"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numberCard" />

        <EditText
            android:id="@+id/expireDate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/gradientMiddle"
            android:hint="Fecha exp."
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.678"
            app:layout_constraintStart_toEndOf="@+id/cvc"
            app:layout_constraintTop_toBottomOf="@+id/numberCard" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>